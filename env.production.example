# Arquivo de variáveis de ambiente para produção
# Copie este arquivo para .env na instância EC2

# Configurações Django
SECRET_KEY=sua-chave-secreta-super-segura-aqui-mude-esta-chave
DEBUG=False
ALLOWED_HOSTS=safetyscorebrasil.com.br,www.safetyscorebrasil.com.br

# Configurações de Banco de Dados
DATABASE_URL=postgresql://admin:sua-senha-do-banco@seu-endpoint-rds:5432/projetoteste

# Configurações de Segurança
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True

# Configurações de Email - AWS SES (OBRIGATÓRIO para reset de senha)
# O sistema usa django-ses para envio de emails via AWS SES
AWS_ACCESS_KEY_ID=sua-access-key-aqui
AWS_SECRET_ACCESS_KEY=sua-secret-key-aqui
AWS_SES_REGION_NAME=us-east-1
AWS_SES_REGION_ENDPOINT=email.us-east-1.amazonses.com
DEFAULT_FROM_EMAIL=contato@stigliani.com.br
SERVER_EMAIL=contato@stigliani.com.br

# Configurações AWS S3 (opcional - para armazenamento de arquivos)
AWS_STORAGE_BUCKET_NAME=safetyscorebrasil-media
AWS_S3_REGION_NAME=us-east-1

# Configurações de Log
LOG_LEVEL=INFO







































